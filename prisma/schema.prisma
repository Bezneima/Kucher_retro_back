generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TeamRole {
  OWNER
  ADMIN
  MEMBER
}

model RetroBoard {
  id          Int           @id @default(autoincrement())
  teamId      Int
  team        Team          @relation(fields: [teamId], references: [id], onDelete: Cascade)
  name        String
  date        DateTime
  description String        @default("")
  columns     RetroColumn[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([teamId])
  @@map("retro_boards")
}

model User {
  id              String         @id @default(uuid())
  email           String         @unique
  passwordHash    String
  name            String?
  teamMemberships TeamMember[]
  refreshTokens   RefreshToken[]
  retroItemComments RetroItemComment[]
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@map("users")
}

model Team {
  id        Int          @id @default(autoincrement())
  name      String
  members   TeamMember[]
  boards    RetroBoard[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@map("teams")
}

model TeamMember {
  id        Int      @id @default(autoincrement())
  teamId    Int
  userId    String
  role      TeamRole
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
  @@map("team_members")
}

model RefreshToken {
  id        String   @id @default(uuid())
  tokenHash String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

model RetroColumn {
  id         Int         @id @default(autoincrement())
  name       String
  description String     @default("")
  color      Json
  orderIndex Int
  boardId    Int
  board      RetroBoard  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  items      RetroItem[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@index([boardId, orderIndex])
  @@map("retro_columns")
}

model RetroItem {
  id          Int         @id @default(autoincrement())
  description String
  likes       String[]    @default([])
  color       String?
  rowIndex    Int
  columnId    Int
  column      RetroColumn @relation(fields: [columnId], references: [id], onDelete: Cascade)
  comments    RetroItemComment[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([columnId, rowIndex])
  @@map("retro_items")
}

model RetroItemComment {
  id        Int       @id @default(autoincrement())
  itemId    Int
  item      RetroItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  creatorId String
  creator   User      @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  text      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([itemId, createdAt])
  @@index([creatorId])
  @@map("retro_item_comments")
}
